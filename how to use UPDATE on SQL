-- Mettre Ã  jour l'adresse d'une personne (ID = 1)
UPDATE Person_Address
SET 
    Person_Address.AddressLine2 = 'Benali Street',
    Person_Address.City =case when Person.BusinessEntityID = 1 then 'Bordeaux'end,
    Person_Address.ModifiedDate = GETDATE()
FROM 
    Person.Address Person_Address
INNER JOIN 
    Person.BusinessEntityAddress BusinessEntityAddress ON Person_Address.AddressID = BusinessEntityAddress.AddressID
INNER JOIN 
    Person.Person Person ON BusinessEntityAddress.BusinessEntityID = Person.BusinessEntityID
WHERE 
    Person.BusinessEntityID = 1;
